class Solution {
    public boolean isPerfectSquare(int num) {
        if (num == 1) return true;

        int low = 2;
        int high = num / 2;

        while (low <= high) {
            long mid = low + (high - low) / 2;
            long square = mid * mid;

            if (square == num)
                return true;
            else if (square < num)
                low = (int) mid + 1;
            else
                high = (int) mid - 1;
        }
        return false;
    }
}
